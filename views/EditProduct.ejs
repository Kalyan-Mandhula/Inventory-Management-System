
<% layout('./BootStrap/Layout') %>
    <div class="d-flex justify-content-center my-5">
        <form action="/inventory/<%=Obj._id%>?_method=PUT" method="POST" class="col-4">
            <h1>Edit <%=Obj.Title%></h1>
            <div class="form-group mt-3 ">
              <label for="Title">Title</label>
              <input value="<%=Obj.Title%>" name="product[Title]" type="text" class="form-control mt-1" id="Title" placeholder="Enter Title" required>
            </div>
            <div class="mb-3 mt-3 ">
              <label for="Category" class="form-label">Category</label>
              <select class="form-select" aria-label="Default select example" name="product[Category]" >
                <% for(let category of Categories) {%>
                <option value="<%=category%>"><%=category%></option>
                <%}%>
              </select>
          </div>
      
            <div class="form-group mt-3 ">
              <label for="Image">Brand</label>
              <input value="<%=Obj.Brand%>" name="product[Brand]" type="text" class="form-control mt-2" id="Image" placeholder="Enter image url" required>
            </div>
            <div class="form-group mt-3 ">
              <label for="Price">Price</label>
              <input value="<%=Obj.Price%>" name="product[Price]" type="text" class="form-control mt-2" id="Price" placeholder="$ 0.00" required>
            </div>
            <div class="form-group mt-3 ">
              <label for="Image">Image</label>
              <input value="<%=Obj.Image%>" name="product[Image]" type="url" class="form-control mt-2" id="Image" placeholder="Enter image url" required>
            </div>
            <div class="form-group mt-3">
              <label for="Description">Description</label>
              <textarea  name="product[Description]" class="form-control mt-2" id="Description" rows="4"><%=Obj.Description%></textarea>
            </div>
            <div class="form-group my-3">
              <button type="submit" class="btn btn-info">Update Product</button>
            </div>
           
           
          </form>
        </div>
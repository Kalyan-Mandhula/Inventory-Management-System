
<% layout('./BootStrap/Layout') %>


<div class="d-flex justify-content-center my-5">
<form class="col-5 needs-validation " action="/inventory" method="post"  novalidate >   
    <div class="mb-3 mt-3">
      <h3>New Product</h3>
    </div>
    
    <div class="mb-3 mt-3 ">
      <label for="Title" class="form-label">Title</label>
      <input type="text" class="form-control " id="Title" name="product[Title]" required>
    </div>
    <div class="mb-3 mt-3 ">
        <label for="Category" class="form-label">Category</label>
        <select class="form-select" aria-label="Default select example" name="product[Category]">
          <% for(let category of Categories) {%>
          <option value="<%=category%>"><%=category%></option>
          <%}%>
        </select>
    </div>







    <div class="mb-3 mt-3 ">
      <label for="Brand" class="form-label">Brand</label>
      <input type="text" class="form-control " id="Title" name="product[Brand]" id="Brand" required>
    </div>

    <div class="mb-3 mt-3 row">
        <label for="Price" class="form-label">Price</label>
        <div class="input-group has-validation">
            <span class="input-group-text" id="price-label">&#8377;</span>
            <input type="number"  class="form-control" id="Price" placeholder="0.00" aria-label="price"
                aria-describedby="price-label" name="product[Price]" required>
                <div class="invalid-tooltip">
                  Please enter valid price
                </div>
        </div>
       
      </div>
      <div class="mb-3">
        <label for="Image" class="form-label">Image url</label>
        <input type="text" class="form-control" id="Image" name="product[Image]" required>
      </div>
      <div class="mb-3">
        <label for="Descrption" class="form-label">Description</label>
        <textarea type="text" class="form-control" style="height: 100px" id="Description" name="product[Description]" required></textarea>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>